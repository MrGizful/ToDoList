TaskListWidget
{
    background-color: gray;
}

TaskWidget
{
    border: 2px solid #de9021;
    background-color: #de9021;
}

TaskWidget:hover
{
    border: 2px solid #be7815;
}

QCheckBox::indicator
{
    width: 15px;
    height: 15px;
    border: 2px solid black;
    border-radius: 9px; 
    background-color: white;
}

QCheckBox::indicator:hover
{
    background-color: lightgray;
}

QLineEdit
{
    border: 0px solid #de9021;
    background-color: #de9021;
}

QPushButton
{
    border: 2px;
    font-size: x-large;
    font-weight: bold;
    color: darkred;
}

QPushButton:hover
{
    color: #e90a0a;
}