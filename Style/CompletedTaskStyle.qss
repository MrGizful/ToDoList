TaskWidget
{
    border: 2px solid #74cb27;
    background-color: #74cb27;
}

TaskWidget:hover
{
    border: 2px solid #5db90c;
}

QCheckBox::indicator
{
    width: 15px;
    height: 15px;
    border: 2px solid black;
    border-radius: 9px; 
    background-color: white;
    image: url(:/Images/check.png);
}

QCheckBox::indicator:hover
{
    background-color: lightgray;
}

QLineEdit
{
    border: 2px solid #74cb27;
    background-color: #74cb27;
}

QPushButton
{
    border: 2px;
    font-size: x-large;
    font-weight: bold;
    color: darkred;
}

QPushButton:hover
{
    color: #e90a0a;
}